<div class="wrapper">
  <div class="sidebar" data-background-color="white" data-active-color="danger">

    <!--
        Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
        Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
    -->

    <div class="sidebar-wrapper">
      <div class="logo">
        <%= link_to 'Comaai', root_path, :class => 'simple-text' %>

      </div>

      <ul class="nav">

        <li class="active">
          <%= link_to(raw('<i class="ti-user"></i>
            <p>Users</p>'), users_path )  %>
        </li>
        <% if coordinator? || admin? %>
            <li>
              <%= link_to(raw('<i class="ti-agenda"></i>
            <p>Courses</p>'), courses_path )  %>
            </li>
            <li>
              <%= link_to(raw('<i class="ti-agenda"></i>
            <p>Groups</p>'), groups_path )  %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="main-panel">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">

          <a class="navbar-brand">Users</a>
        </div>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
                <li>
                  <a>
                    <p>Hello <%= current_user.full_name %>!</p>
                  </a>
                </li>
                <li>
                  <%= link_to(raw('<i class="ti-settings"></i> <p>Profile</p>'), user_path(current_user)) %>
                </li>
                <li>
                  <%= link_to(raw('<i class="ti-power-off"></i>
            <p>Log out</p>'), logout_path, method: :delete )  %>
                </li>
            <% end %>
          </ul>

      </div>
    </nav>


    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <p id="notice"><%= notice %></p>

            <div class="card">

              <div class="content table-responsive table-full-width">
                <table class="table table-striped">
                  <thead>
                  <th>Username</th>
                  <th>User Type</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Active</th>
                  <th colspan="3">
                      <%= link_to 'New User', new_user_path, :class => 'btn btn-info btn-fill btn-wd' %>
                  </th>
                  </thead>
                  <tbody>
                  <% @users.each do |user| %>
                      <tr>
                        <td><%= user.username %></td>
                        <td><%= user.userType %></td>
                        <td><%= user.firstName %></td>
                        <td><%= user.lastName %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.active ? 'Activo' : 'Inactivo' %></td>
                        <td><%= link_to 'Show', user %></td>
                        <td><%= link_to 'Edit', edit_user_path(user) %></td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>

              </div>
            </div>
          </div>


        </div>
      </div>
    </div>



  </div>
</div>